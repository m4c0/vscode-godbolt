{
	"name": "godbolt",
	"displayName": "Compiler Explorer",
	"description": "Integrates Matt Godbolt's Compiler Explorer into VSCode",
	"version": "0.0.1",
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},

	"main": "./extension.js",

	"engines": { "vscode": "^1.31.0" },
	"categories": [ "Other" ],

	"activationEvents": [
		"onLanguage:cpp"
	],
	"contributes": {
		"commands": [{
			"command": "extension.compileInCompilerExplorer",
			"title": "Compile in Compiler Explorer"
		}],
		"menus": {
			"commandPalette": [{
				"command": "extension.compileInCompilerExplorer",
				"when": "editorLangId == cpp"
			}],
			"editor/title": [{
				"command": "extension.compileInCompilerExplorer",
				"group": "navigation",
				"when": "editorLangId == cpp"
			}]
		}
	}
}
